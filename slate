# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

layout work 'Terminal':REPEAT throw 2 resize:screenSizeX;screenSizeY
layout work 'Sublime Text':REPEAT throw 1 resize:screenSizeX;screenSizeY
layout work 'Google Chrome':REPEAT throw 0 resize:screenSizeX;screenSizeY
layout work 'Firefox':REPEAT throw 0 resize:screenSizeX;screenSizeY
layout work 'Slack':REPEAT throw 0 resize:screenSizeX;screenSizeY
layout work 'Spotify':REPEAT throw 0 resize:screenSizeX;screenSizeY

bind left:alt;ctrl;cmd  push left bar-resize:screenSizeX/2
bind right:alt;ctrl;cmd push right bar-resize:screenSizeX/2
bind up:alt;ctrl;cmd    push up bar-resize:screenSizeY/2
bind down:alt;ctrl;cmd  push down bar-resize:screenSizeY/2
bind m:alt;ctrl;cmd     move screenOriginX;screenOriginY screenSizeX;screenSizeY
bind n:alt;ctrl;cmd     move screenSizeX*0.2;screenSizeY*0.1 screenSizeX*0.6;screenSizeY*0.8

bind ,:alt;ctrl;cmd     throw 0 resize:screenSizeX;screenSizeY
bind .:alt;ctrl;cmd     throw 1 resize:screenSizeX;screenSizeY
bind /:alt;ctrl;cmd     throw 2 resize:screenSizeX;screenSizeY
bind w:alt;ctrl;cmd     layout work

bind 1:cmd focus "Sublime Text"
bind 2:cmd focus "Terminal"
bind 3:cmd focus "Google Chrome"
bind 4:cmd focus "Slack"
